<div ng-app="coachResultSubmitter" ng-controller="MainCtrl" ng-cloak>
    <div>
        {{workoutInfo.title}}
    </div>
    <div>
        {{workoutInfo.comments}}
    </div>
    <div>
        {{workoutInfo.date | date: "MMM dd, yyyy"}}
    </div>
    <form name="form" ng-submit="saveResults()">
        <div>
            {{getActivePiece().pieceInfo | pieceInfo}}&nbsp;({{getActivePieceDisplay()}})
        </div>
        <div ng-repeat="result in getActivePiece().results | orderBy:rowerOrderPredicate">
            {{result.rowerInfo.displayName}}&nbsp;&nbsp;
            <input ng-model="result.splitResult" the8-split type="text" class="split-input" />
            <input the8-stroke-rate ng-model="result.strokeRate" type="tel" class="stroke-rate-input" />
        </div>
        <div>
            <button type="button" ng-click="goToPreviousPiece()" ng-disabled="checkGoToPreviousPieceDisabled()">
                &lt;
            </button>
            <button type="button" ng-click="goToNextPiece()" ng-disabled="checkGoToNextPieceDisabled()">
                &gt;
            </button>
        </div>
        <button ng-disabled="form.$invalid || form.$pristine" type="submit">
            Save
        </button>
    </form>
</div>
