{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "development",
        "production"
      ]
    }
  },
  "variables": {
    "environments": {
      "development": {
        "webApp": {
        }
      },
      "production": {
        "webApp": {
          "customDomain": "the8.io"
        }
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "type": "Microsoft.Web/serverfarms",
      "name": "hostingPlanName",
      "location": "Central US",
      "sku": {
        "tier": "Standard",
        "name": "f1",
        "capacity": 0
      },
      "properties": {
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2015-08-01",
      "properties": {
        "hostnames": "[variables('environments')[parameters('environment')]['webApp.customDomain']]"
      },
      "name": "siteName",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
      ],
      "resources": [
        {
          "name": "web",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "Microsoft.Web/Sites/siteName"
          ],
          "properties": {
            "netFrameworkVersion": "4.6.1"
          }
        }
      ]
    }
  ],
  "outputs": {

  }
}